{
  "manifest_version": 2,
  "name": "Diff Tool",
  "description": "View diff and merge two files.",
  "version": "0.1.4",
  "minimum_chrome_version": "23",
  "offline_enabled" : true,
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "permissions": ["experimental",
                  "storage",
                  "unlimitedStorage",
                  "fileSystem",
                  "fileSystemWrite",
                  "<all_urls>"
                 ],
  "icons": { "16": "img/icon_16.png",
             "48": "img/icon_48.png",
             "128": "img/icon_128.png"
           }
}
